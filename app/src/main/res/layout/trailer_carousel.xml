<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/carousel_trailer_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/carousel_trailer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent"
        android:paddingTop="@dimen/large_margin"
        android:paddingLeft="@dimen/small_margin"
        android:paddingRight="@dimen/small_margin"
        android:maxLines="1"
        android:paddingBottom="@dimen/huge_margin"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_size"
        app:layout_constraintStart_toStartOf="@+id/carousel_trailer_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/carousel_trailer_thumbnail"
        tools:text="trailer title"/>

    <ImageView
        android:id="@+id/play_trailer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_play_arrow"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carousel_trailer_thumbnail"
        app:layout_constraintBottom_toTopOf="@id/carousel_trailer_thumbnail"/>

</androidx.constraintlayout.widget.ConstraintLayout>
